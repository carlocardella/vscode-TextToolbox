// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "webpack-dev",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "unit-tests",
            "problemMatcher": "$tsc-watch",
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "watch-web",
            "group": "build",
            "isBackground": true,
            "problemMatcher": ["$ts-webpack-watch"]
        },
        {
            "label": "Run All Tests",
            "type": "npm",
            "script": "test:vscode",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Tests Only",
            "type": "npm",
            "script": "test-compile",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": ["$tsc"]
        }
    ]
}
